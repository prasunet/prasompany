generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model CareerApplication {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  phone        String
  email        String   @unique
  resumeUrl    String   // Store resume
  jobTitle     String
  experience   Int
  coverLetter  String?
  linkedin     String?
  github       String?
  portfolio    String?
  createdAt    DateTime @default(now())
}

model Contact {
  id         String   @id @default(uuid())
  name       String
  email      String
  phone      String
  message    String
  createdAt  DateTime @default(now())
}

model Register {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  email       String   @unique
  company     String
  phone       String?
  projectType String
  message     String
  createdAt   DateTime @default(now())
}
model Subscriber {
  id    String @id @default(uuid())
  email String @unique
  createdAt DateTime @default(now())
}
model Certificate {
  id          String  @id @unique @default(uuid()) // Change to 10-digit ID manually
  recipient   String
  course      String
  issuedDate  DateTime @default(now())
}


